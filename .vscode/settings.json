{
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "node_modules": true,
    "**/coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/.npmrc": true,
    "**/coverage": true
  }
}
